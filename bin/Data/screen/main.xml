<?xml version="1.0" encoding="UTF-8"?>
<screen id="main" background="background">
  <button text="ion-android-home" font="icon" target="alt" dock="right" />
  <panel x="25%" spacing="5%">
    <text text="Menu" />
    <pair spacing="100">
      <text text="toggle" />
      <toggleButton text="OFF" activetext="ON" />
    </pair>
    <pair spacing="100px">
      <text text="slider" />
      <slider />
    </pair>
    <pair spacing="100">
      <text text="edit" />
      <edit />
    </pair>
    <pair spacing="100">
      <text text="checkbox" />
      <checkbox />
    </pair>
    <pair spacing="100">
      <text text="setting" />
      <settingButton text="Set">
        <setting text="Set2" />
        <setting text="Set3" />
        <setting text="Set4" />
      </settingButton>
    </pair>
    <button text="Apply" />
    <button text="Back" target="alt"/>
  </panel>
</screen>
<screen id="alt" background="background">
  <button text="Back" target="main"/>
</screen>
